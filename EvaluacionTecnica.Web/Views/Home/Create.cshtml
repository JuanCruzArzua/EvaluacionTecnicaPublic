@model EvaluacionTecnica.Domain.Entidades.Empleado

@{
    ViewBag.Title = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (ViewBag.MostrarMensajeError != null && ViewBag.MostrarMensajeError)
            {
                <div class="alert alert-danger">No se pudo dar de alta el Empleado</div>
            }

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Codigo):
                <span>
                    @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", @maxlength="5" })
                    @Html.ValidationMessageFor(model => model.Codigo)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Apellido):
                <span>
                    @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.Apellido)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre):
                <span>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.Nombre)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FechaAlta):
                <span>
                    @Html.TextBoxFor(m => m.FechaAlta, new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.FechaAlta)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TipoDocumento):
                <span>
                    @Html.DropDownListFor(x => x.TipoDocumentoId, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TipoDocumentoId)
                </span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NumeroDocumento):
                <span>
                    @Html.TextBoxFor(m => m.NumeroDocumento, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NumeroDocumento)
                </span>
            </div>


            <p>
                <input type="submit" value="Guardar" class="btn btn-info" />
                @Html.ActionLink("Volver a lista de Empleados", "Index")
            </p>
        }


    </div>

</div>

